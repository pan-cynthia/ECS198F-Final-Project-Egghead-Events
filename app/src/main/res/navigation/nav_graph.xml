<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/preloadFragment">

    <fragment
        android:id="@+id/preloadFragment"
        android:name="com.egghead.events.PreloadFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_preload" >
        <action
            android:id="@+id/action_preloadFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_preloadFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.egghead.events.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.egghead.events.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signinFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signinFragment_to_signinOptionsFragment"
            app:destination="@id/signinOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinOptionsFragment"
        android:name="com.egghead.events.SigninOptionsFragment"
        android:label="fragment_signin_options"
        tools:layout="@layout/fragment_signin_options" >
        <action
            android:id="@+id/action_signinOptionsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>